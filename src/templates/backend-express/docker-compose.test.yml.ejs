version: '3.3'

services:
  postgres_testing:
    container_name: postgres_testing
    image: postgres:10.4
    restart: always
    environment:
        POSTGRES_USER: <%= props.projectNameAlias %>_test
        POSTGRES_PASSWORD: testingPassword
        POSTGRES_DB: <%= props.projectNameAlias %>_test
    ports:
      - 21000:5432
  node:
    build:
      dockerfile: node.test.Dockerfile
    environment:
      - NODE_ENV=testing
    volumes:
      - .:/app
      - /app/node_modules
    depends_on:
      - postgres_testing
