'use strict';

/**
 * This class can be used to throw when an invalid token is found (depending on the context)
 */
export default class InvalidTokenError extends Error {
  type: string;
  message: string;
  status: number;
  error: object | null;
  stack: string;

  /**
   * @param {*} error Error description (can be any type)
   */
  constructor(error?: any) {
    super('InvalidTokenError');

    this.type = this.constructor.name;
    this.message = 'Invalid token';
    this.status = 401;
    this.error = error || null;
  }
}
