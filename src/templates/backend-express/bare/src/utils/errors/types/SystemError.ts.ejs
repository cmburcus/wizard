'use strict';

/**
 * This class can be used to throw when an internal server error occured
 */
export default class SystemError extends Error {
  public type: string;
  public message: string;
  public status: number;
  public error: object | null;
  public stack: string;

  /**
   * @param {*} error Error description (can be any type)
   */
  public constructor(error?: any) {
    super('SystemError');

    this.type = this.constructor.name;
    this.message = 'Internal server error';
    this.status = 500;
    this.error = error || null;
  }
}
