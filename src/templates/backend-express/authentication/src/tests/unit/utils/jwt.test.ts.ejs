'use strict';

import chai from 'chai';
import jwtUtil from '../../../utils/jwt'

const expect = chai.expect;

interface MockHeaders {
  authorization?: string | null
}

interface MockRequest {
  headers?: MockHeaders
}

describe('TESTING UTIL: jwt', () => {
  describe('getTokenFromHeader', () => {
    it('it should return a string if the authorization header exists and is valid', () => {
      const mockToken = 'mockToken';
      const mockRequest: MockRequest = {
        headers: {
          authorization: `Bearer ${mockToken}`,
        },
      };

      let result = null;

      try {
        // @ts-ignore
        result = jwtUtil.getTokenFromHeader(mockRequest);
      } catch (error) {
        result = error;
      }

      expect(result)
        .to.be.a('string')
        .and.equal(mockToken);
    });

    it('it should throw error if the headers are missing', () => {
      const mockRequest: MockRequest = {};

      let result = null;

      try {
        // @ts-ignore
        result = jwtUtil.getTokenFromHeader(mockRequest);
      } catch (error) {
        result = error;
      }

      expect(result).to.be.an('error');
      expect(result)
        .to.have.property('type')
        .equal('InvalidTokenError');
      expect(result)
        .to.have.property('status')
        .equal(401);
      expect(result)
        .to.have.property('error')
        .equal('No authorization header found');
    });

    it('it should throw error if the authorization header is missing', () => {
      const mockRequest: MockRequest = {
        headers: {},
      };

      let result = null;

      try {
        // @ts-ignore
        result = jwtUtil.getTokenFromHeader(mockRequest);
      } catch (error) {
        result = error;
      }

      expect(result).to.be.an('error');
      expect(result)
        .to.have.property('type')
        .equal('InvalidTokenError');
      expect(result)
        .to.have.property('status')
        .equal(401);
      expect(result)
        .to.have.property('error')
        .equal('No authorization header found');
    });

    it('it should throw error if the authorization header has no value', () => {
      const mockRequest: MockRequest = {
        headers: { authorization: null },
      };

      let result = null;

      try {
        // @ts-ignore
        result = jwtUtil.getTokenFromHeader(mockRequest);
      } catch (error) {
        result = error;
      }

      expect(result).to.be.an('error');
      expect(result)
        .to.have.property('type')
        .equal('InvalidTokenError');
      expect(result)
        .to.have.property('status')
        .equal(401);
      expect(result)
        .to.have.property('error')
        .equal('No authorization header found');
    });

    it('it should throw error if the authorization header does not include the word Bearer', () => {
      const mockToken = 'mockToken';
      const mockRequest: MockRequest = {
        headers: {
          authorization: ` ${mockToken}`,
        },
      };

      let result = null;

      try {
        // @ts-ignore
        result = jwtUtil.getTokenFromHeader(mockRequest);
      } catch (error) {
        result = error;
      }

      expect(result).to.be.an('error');
      expect(result)
        .to.have.property('type')
        .equal('InvalidTokenError');
      expect(result)
        .to.have.property('status')
        .equal(401);
      expect(result)
        .to.have.property('error')
        .equal('The authorization header is malformed');
    });

    it('it should throw error if the authorization header does not include space between Bearer and token', () => {
      const mockToken = 'mockToken';
      const mockRequest: MockRequest = {
        headers: {
          authorization: `Bearer${mockToken}`,
        },
      };

      let result = null;

      try {
        // @ts-ignore
        result = jwtUtil.getTokenFromHeader(mockRequest);
      } catch (error) {
        result = error;
      }

      expect(result).to.be.an('error');
      expect(result)
        .to.have.property('type')
        .equal('InvalidTokenError');
      expect(result)
        .to.have.property('status')
        .equal(401);
      expect(result)
        .to.have.property('error')
        .equal('The authorization header is malformed');
    });

    it('it should throw error if the authorization header has too many elements', () => {
      const mockToken = 'mockToken';
      const mockRequest: MockRequest = {
        headers: {
          authorization: `Bearer ${mockToken} test`,
        },
      };

      let result = null;

      try {
        // @ts-ignore
        result = jwtUtil.getTokenFromHeader(mockRequest);
      } catch (error) {
        result = error;
      }

      expect(result).to.be.an('error');
      expect(result)
        .to.have.property('type')
        .equal('InvalidTokenError');
      expect(result)
        .to.have.property('status')
        .equal(401);
      expect(result)
        .to.have.property('error')
        .equal('The authorization header is malformed');
    });
  });
});
