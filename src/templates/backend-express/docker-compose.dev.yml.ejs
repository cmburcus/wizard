version: '3.3'

services:
  postgres:
    image: postgres:10.4
    restart: always
    environment:
      POSTGRES_USER: <%= props.projectNameAlias %>
      POSTGRES_PASSWORD: developmentPassword
      POSTGRES_DB: <%= props.projectNameAlias %>
    ports:
      - 21000:5432
  node:
    build:
      dockerfile: node.dev.Dockerfile
    environment:
      - NODE_ENV=development
    volumes:
      - .:/app
      - /app/node_modules
    depends_on:
      - postgres
